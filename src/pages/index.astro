---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/sections/Hero.astro";
import Sobre from "../components/sections/Sobre.astro";
import Diferenciais from "../components/sections/Diferenciais.astro";
import Localizacao from "../components/sections/Localizacao.astro";
import Galeria from "../components/sections/Galeria.astro";
import Plantas from "../components/sections/Plantas.astro";
import Cta from "../components/sections/Cta.astro";
import Footer from "../components/sections/Footer.astro";
---

<Layout
  title="Maria Maggiore - Gazzola"
  description="Maria Maggiore, um empreendimento Gazzola.">
  <main class="">
    <Hero />
    <Sobre />
    <Diferenciais />
    <Galeria />
    <Plantas />
    <Localizacao />
    <Cta />
    <Footer />
  </main>
</Layout>


<style is:global>

.fade-in,
.slide-in,
.bounce-in,
.swing-in {
  opacity: 0;
  transition-duration: 1.5s;
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transition-property: opacity, transform;
}

.fade-in {
  transition-timing-function: cubic-bezier(0.39, 0.575, 0.565, 1);
  transition-delay: 0.2s;
}

.slide-in {
  transform: translateX(-50px);
  transition-delay: 0.3s;
}

.bounce-in {
  transform: scale(0.8);
  transition-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  transition-delay: 0.5s;
}

.swing-in {
  transform: rotateY(-90deg);
  transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transition-delay: 0.5s;
}

.fade-in.visible,
.slide-in.visible,
.bounce-in.visible,
.swing-in.visible {
  opacity: 1;
  transform: translateX(0) scale(1) rotateY(0);
}
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -100px 0px'});

  document.querySelectorAll('.fade-in, .slide-in, .bounce-in, .swing-in').forEach((el) => {
    observer.observe(el);
  });
</script>