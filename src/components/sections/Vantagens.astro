---
// Vantagens.astro

import bike from "@assets/svg/vantagens/bike.svg";
import carroEletrico from "@assets/svg/vantagens/carroEletrico.svg";
import alarme from "@assets/svg/vantagens/alarme.svg";
import led from "@assets/svg/vantagens/led.svg";
import gesso from "@assets/svg/vantagens/gesso.svg";
import alvenaria from "@assets/svg/vantagens/alvenaria.svg";

const vantagens = [
  { icon: carroEletrico, title: "Espera para tomada de carro elétrico" },
  { icon: alarme, title: "Alarme CFTV" },
  { icon: led, title: "Iluminação do condomínio em LED" },
  { icon: alvenaria, title: "Paredes em alvenaria" },
  { icon: bike, title: "Bike sharing" },
  { icon: gesso, title: "Forro de gesso em todo o apartamento" },
];
---

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-screen-lg">
  {
    vantagens.map((vantagem) => (
      <div class=" flex flex-col  gap-8 group bounce-in">
        <div class="border-2 border-b-0 pt-16 pb-0 border-maggiore-dourado-400 p-6 w-full flex justify-center items-end min-h-[160px] transition-colors duration-700 ease-in-out group-hover:border-maggiore-verde-500">
          <img
            src={vantagem.icon.src}
            class="transition-transform duration-300 group-hover:-translate-y-6"
          />
        </div>

        <h3 class="text-xl font-semibold group-hover:text-maggiore-verde-600 transition-colors duration-500 ease-in-out  ">
          {vantagem.title}
        </h3>
      </div>
    ))
  }
</div>
