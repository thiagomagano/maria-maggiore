---
import { Image } from "astro:assets";
import ImgLocalizacao from "@assets/localizacao_maggiore.png";

const pontosEstrategicos = [
  {
    id: 1,
    desc: "Viva Open Mall",
    tempo: "5",
  },
  {
    id: 2,
    desc: "Parque Germânia",
    tempo: "10",
  },
  {
    id: 3,
    desc: "Iguatemi",
    tempo: "15",
  },
  {
    id: 4,
    desc: "Bourbon Country",
    tempo: "20",
  },
  {
    id: 5,
    desc: "Hospital Conceição",
    tempo: "12",
  },
  {
    id: 6,
    desc: "Bourbon Wallig",
    tempo: "5",
  },
  {
    id: 7,
    desc: "Boulevard Assis Brasil",
    tempo: "8",
  },
];
---

<section id="localização" class="">
  <div class="grid lg:grid-cols-2">
    <div class="bg-gray-300 py-16 lg:px-16 space-y-8">
      <h2 class="text-4xl font-bold text-maggiore-verde-950">
        Praticidade no dia a dia. <br /> Comodidade garantida.
      </h2>

      <div class="grid place-items-center place-content-center h-full">
        <Image
          src={ImgLocalizacao}
          alt="Mapa mostrando a localização do empreendimento"
          class="max-w-full"
        />
      </div>
    </div>
    <div class="bg-maggiore-green py-16 lg:px-24 space-y-8 grid">
      <h4 class="text-2xl text-white justify-self-start place-self-end">
        Praticidade a 5 minutos de casa.
      </h4>
      <div
        class="container mx-auto text-white flex flex-col justify-center gap-16">
        <ol class="grid grid-cols-2 gap-y-12 gap-x-4">
          {
            pontosEstrategicos.map((pontos) => (
              <li class="flex gap-4 items-center text-xl">
                <span class="text-4xl font-medium  rounded-full border-maggiore-dourado-400 border-2 min-w-[75px] min-h-[75px] grid place-items-center ">
                  {pontos.id}
                </span>
                <span class="flex flex-col">
                  {pontos.desc}

                  {/* <span class="text-base text-gray-400">
                    {pontos.tempo} Minutos
                  </span> */}
                </span>
              </li>
            ))
          }
          <li></li>
        </ol>
      </div>
    </div>
  </div>
</section>
